@model RCA.Models.Class_GroupLevelItem
@{
    ViewData["Title"] = "Item " + ViewBag.GroupLevelName + ": NOVO CADASTRO";
}
<h2>@ViewData["Title"]</h2>

<p>|| <a asp-action="Index" asp-route-_GroupId="@ViewBag.GroupId" class="btn btn-info">Voltar para LISTAGEM</a></p>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGLI">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden>
                @Html.TextBoxFor(m => m.Id);
                @Html.TextBoxFor(m => m.StatusId);
                @Html.TextBoxFor(m => m.GroupLevelId);
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            @if (ViewBag.GroupId == 1)
            {
                <div class="form-group">
                    <label asp-for="OccupantsNum" class="control-label"></label>
                    <input asp-for="OccupantsNum" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PCD" class="control-label"></label>
                    <input asp-for="PCD" class="form-control" />
                </div>
            }

            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <span asp-validation-for="OccupantsNum" class="text-danger"></span>
                <span asp-validation-for="PCD" class="text-danger"></span>
            </div>

            <div class="form-group">
                || <input type="submit" value=" Gravar ! " class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
