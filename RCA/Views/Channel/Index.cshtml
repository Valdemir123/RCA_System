@model IEnumerable<RCA.Models.Class_Channel>

@{
    ViewData["Title"] = "Canal: LISTAGEM";
}
<h2>@ViewData["Title"]</h2>
<hr />

<p>|| <a asp-action="Create" class="btn btn-default">Adicionar Novo</a></p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                | @Html.DisplayNameFor(model => model.StatusId)
            </th>
            <th>
                | @Html.DisplayNameFor(model => model.TypeId)
            </th>
            <th>
                | @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>|| Ações</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                | @Html.DisplayFor(modelItem => item.StatusId)
            </td>
            <td>
                | @Html.DisplayFor(modelItem => item.TypeId)
            </td>
            <td>
                | @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                || <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default ">Detalhe</a>
            </td>
            <td>
                || <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default ">Modificar</a>
            </td>
            <td>
                || <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default ">Suspender</a>
            </td>
        </tr>
        }
    </tbody>
</table>
