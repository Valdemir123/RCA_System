@model RCA.Models.Class_User

@{
    ViewData["Title"] = "USUÁRIO: SUSPENDER Cadastro";
}
<h2>@ViewData["Title"]</h2>

<p>|| <a asp-action="Index" asp-route-_CompanyId="@Model.CompanyId" class="btn btn-info">Voltar para LISTAGEM</a></p>
<hr />

<div>
    <strong style="font-size:25px">Item:&nbsp;&nbsp;<t style="font-style:italic">@Html.DisplayFor(m => m.StatusId)</t></strong>
    <br />
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.CompanyId)
        </dt>
        <dd>
            @ViewBag.CompanyName
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.TypeAccessId)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.TypeAccessId)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>
    </dl>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Email)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Phone)
        </dd>
    </dl>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.UserName)
        </dd>
    </dl>
    <form asp-action="Delete">
        <div hidden>
            @Html.TextBoxFor(m => m.Id);
            @Html.TextBoxFor(m => m.StatusId);
        </div>
        <t style="color:brown; font-size:20px;">Você tem certeza que deseja SUSPENDER ?</t> || <input type="submit" value="Sim !" class="btn btn-warning" />
    </form>
</div>
