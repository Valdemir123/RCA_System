@model RCA.Models.Class_GroupLevel
@{
    ViewData["Title"] = "Grupo de "+ ViewBag.GroupName + ": NOVO CADASTRO";
}
<h2>@ViewData["Title"]</h2>

<p>|| <a asp-action="Index" asp-route-_GroupId="@Model.GroupId" class="btn btn-info">Voltar para LISTAGEM</a></p>
<hr />

<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGL">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden>
                @Html.TextBoxFor(m => m.Id);
                @Html.TextBoxFor(m => m.StatusId);
                @Html.TextBoxFor(m => m.CompanyId);
                @Html.TextBoxFor(m => m.GroupId);
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autofocus="autofocus" />
            </div>

            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <br />
                || <input type="submit" value=" Gravar ! " class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
