@model IEnumerable<RCA.Models.Class_Company>
@{
    ViewData["Title"] = "HOTEL/POUSADA: Listagem";
}
<div>
    <h2>@ViewData["Title"]</h2>
    || <a asp-action="Create" class="btn btn-success">Adicionar Novo</a>
</div>
<hr />
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                | @Html.DisplayNameFor(m => m.StatusId)
            </th>
            <th>
                | @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                | @Html.DisplayNameFor(m => m.City) - @Html.DisplayNameFor(m => m.State)
            </th>
            <th>|| Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var _Item in Model)
        {
            <tr>
                @if (_Item.StatusId != CompanyStatus.Ativo)
                {
                    <td>
                        | @Html.DisplayFor(m => _Item.StatusId)
                    </td>
                }
                else
                {
                    <td></td>
                }

                <td>
                    | @Html.DisplayFor(m => _Item.Name)
                </td>
                <td>
                    | @Html.DisplayFor(m => _Item.City) - @Html.DisplayFor(m => _Item.State)
                </td>
                <td>
                    || <a asp-action="Details" asp-route-id="@_Item.Id" class="btn btn-default">Detalhe</a>
                    || <a asp-action="Edit" asp-route-id="@_Item.Id" class="btn btn-success">Modificar</a>
                    || <a asp-action="Delete" asp-route-id="@_Item.Id" class="btn btn-warning">Suspender</a>
                </td>
            </tr>
        }
    </tbody>
</table>
