@model IEnumerable<RCA.Models.Class_Company>

@{
    ViewData["Title"] = "Hotel-Pousada: LISTAGEM";
}
<h2>@ViewData["Title"]</h2>
<hr />

<p>|| <a asp-action="Create" class="btn btn-default">Adicionar Novo</a></p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                | @Html.DisplayNameFor(model => model.StatusId)
            </th>
            <th>
                | @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                | @Html.DisplayNameFor(model => model.City) - @Html.DisplayNameFor(model => model.State)
            </th>
            <th>|| Ações</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    | @Html.DisplayFor(modelItem => item.StatusId)
                </td>
                <td>
                    | @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    | @Html.DisplayFor(modelItem => item.City) - @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    || <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default ">Detalhe</a>
                </td>
                <td>
                    || <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default ">Modificar</a>
                </td>
                <td>
                    || <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default ">Suspender</a>
                </td>
            </tr>
        }
    </tbody>
</table>
